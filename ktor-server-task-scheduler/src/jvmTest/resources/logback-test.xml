<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.github.dockerjava" level="info"/>
    <logger name="io.ktor" level="debug"/>
    <logger name="ktor.test" level="info"/>
    <logger name="io.github.flaxoos.ktor.server.plugins" level="info"/>
    <logger name="io.github.flaxoos.ktor.server.plugins.taskscheduler.managers" level="debug"/>
    <logger name="io.github.flaxoos.ktor.server.plugins.taskscheduler.coordinators" level="info"/>
    <logger name="org.mongodb.driver.protocol.command" level="debug"/>
    <logger name="Exposed" level="debug"/>
</configuration>